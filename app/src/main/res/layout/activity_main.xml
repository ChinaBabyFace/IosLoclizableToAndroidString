<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.sharkren.myapplication.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="多语言国际化助手"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        android:orientation="vertical">

        <Button
            android:id="@+id/and_new_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="强制增加或更新指定数量条目"/>

        <Button
            android:id="@+id/all_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="对所有条目执行，有则不动，无则增加"/>

        <Button
            android:id="@+id/all_update_and_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="对所有条目执行有则同步，无则增加"/>

        <Button
            android:id="@+id/check_ios_file_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检查IOS文件合法性"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/logcat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""/>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
